<style>
    .custom-form-container {
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      width: 100%;
    }

    .custom-form-container .eventLinks {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin: 1rem;
      padding: 1rem;
      width: 100%;
      background: #0056b3;
    }

    .custom-form-container .eventLinks button {
      padding: 0.7rem;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      width: fit-content;
    }
  </style>

<div class="form-box">
    <h1>Create Event</h1>
    <form id="customEventForm">
      <div class="form-group">
        <label for="customTag">Tag:</label>
        <select id="customTag" name="tag" required>
          <option value="">Select a tag</option>
          <option value="Academic">Academic</option>
          <option value="Important">Important</option>
          <option value="Event">Event</option>
        </select>
      </div>
      <div class="form-group">
        <label for="customDate">Date:</label>
        <input type="text" id="customDate" name="date" placeholder="e.g., 20" required>
      </div>
      <div class="form-group">
        <label for="customMonth">Month:</label>
        <input type="text" id="customMonth" name="month" placeholder="e.g., Mar" required>
      </div>
      <div class="form-group">
        <label for="customTitle">Title:</label>
        <input type="text" id="customTitle" name="title" placeholder="e.g., Mid-Term Examination Schedule" required>
      </div>
      <div class="form-group">
        <label for="customDescription">Description:</label>
        <textarea id="customDescription" name="description" placeholder="e.g., The mid-term examination schedule has been released..." required></textarea>
      </div>
      <div class="form-group">
        <label for="customClassName">Class Name:</label>
        <select id="customClassName" name="class_name" required>
          <option value="">Select a class name</option>
        </select>
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>