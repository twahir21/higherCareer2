
  <style>
    .custom-form-container {
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
    }

    .custom-form-container .form-box {
      background: #fff;
      padding: 1rem 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 360px;
    }

    .custom-form-container h1 {
      text-align: center;
      margin-bottom: 1rem;
      color: #333;
    }

    .custom-form-container .form-group {
      margin-bottom: 0.75rem;
    }

    .custom-form-container label {
      display: block;
      margin-bottom: 0.25rem;
      color: #555;
    }

    .custom-form-container input,
    .custom-form-container select,
    .custom-form-container textarea {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    .custom-form-container textarea {
      resize: vertical;
      height: 80px;
    }

    .custom-form-container button {
      width: 100%;
      padding: 0.5rem;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .custom-form-container button:hover {
      background-color: #0056b3;
    }
  </style>

  <div class="custom-form-container">
    <div class="form-box">
      <h1>Submit Event</h1>
      <form id="customEventForm">
        <div class="form-group">
          <label for="customTag">Tag:</label>
          <select id="customTag" name="tag" required>
            <option value="">Select a tag</option>
            <option value="Academic">Academic</option>
            <option value="Important">Important</option>
            <option value="Event">Event</option>
          </select>
        </div>
        <div class="form-group">
          <label for="customDate">Date:</label>
          <input type="text" id="customDate" name="date" placeholder="e.g., 20" required>
        </div>
        <div class="form-group">
          <label for="customMonth">Month:</label>
          <input type="text" id="customMonth" name="month" placeholder="e.g., Mar" required>
        </div>
        <div class="form-group">
          <label for="customTitle">Title:</label>
          <input type="text" id="customTitle" name="title" placeholder="e.g., Mid-Term Examination Schedule" required>
        </div>
        <div class="form-group">
          <label for="customDescription">Description:</label>
          <textarea id="customDescription" name="description" placeholder="e.g., The mid-term examination schedule has been released..." required></textarea>
        </div>
        <div class="form-group">
          <label for="customClassName">Class Name:</label>
          <select id="customClassName" name="class_name" required>
            <option value="">Select a class name</option>
          </select>
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
  <script>
    (function () {
      document.addEventListener('DOMContentLoaded', function () {
        const tagDropdown = document.getElementById('customTag');
        const classNameDropdown = document.getElementById('customClassName');
        const form = document.getElementById('customEventForm');

        const tagToClassName = {
          Academic: 'academic',
          Important: 'important',
          Event: 'event',
        };

        tagDropdown.addEventListener('change', function () {
          const selectedTag = tagDropdown.value;
          classNameDropdown.innerHTML = '';

          if (selectedTag) {
            const className = tagToClassName[selectedTag];
            const option = document.createElement('option');
            option.value = className;
            option.textContent = className.charAt(0).toUpperCase() + className.slice(1);
            classNameDropdown.appendChild(option);
          } else {
            const defaultOption = document.createElement('option');
            defaultOption.value = '';
            defaultOption.textContent = 'Select a class name';
            classNameDropdown.appendChild(defaultOption);
          }
        });

        form.addEventListener('submit', function (event) {
          event.preventDefault();

          const formData = {
            tag: tagDropdown.value,
            date: document.getElementById('customDate').value,
            month: document.getElementById('customMonth').value,
            title: document.getElementById('customTitle').value,
            description: document.getElementById('customDescription').value,
            class_name: classNameDropdown.value,
          };

          console.log('Form Data Submitted:', formData);
          alert('Form submitted successfully!');
          form.reset();
          classNameDropdown.innerHTML = '<option value="">Select a class name</option>';
        });
      });
    })();
</script>