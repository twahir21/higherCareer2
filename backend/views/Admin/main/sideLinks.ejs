                <!-- Student  -->
                <li class="nav-item" id="student">
                    <a class="nav-link" id="studentLink">
                        <i class="fas fa-solid fa-user nav-icon"></i>
                        <p>Parents</p>
                    </a>
                </li>

                <!-- Subject management  -->
                <li class="nav-item" id="subject">
                    <a class="nav-link">
                        <i class="fas fa-user-graduate nav-icon"></i>
