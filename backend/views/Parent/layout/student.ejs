<h2>Student List</h2>
    
<% if (students.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>Serial</th>
                <th>Full Name</th>
                <th>Class</th>
                <th>Stream</th>
                <th>Relationship</th>
                <th>Assigned At</th>
            </tr>
        </thead>
        <tbody>
            <% let counter = 1; %> 
            <% students.forEach(student => { %>
                <tr>
                    <td><%= counter %></td> 
                    <td><%= student.full_name %></td>
                    <td><%= student.class %></td>
                    <td><%= student.stream %></td>
                    <td><%= student.relationship %></td>
                    <td><%= new Date(student.assigned_at).toLocaleString() %></td>
                </tr>
                <% counter++; %> 
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p>No students found.</p>
<% } %>

