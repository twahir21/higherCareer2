<section id="verifyUsersSection" class="content-wrapper" style="display:none;">

<style>
h1 {
    text-align: center;
}

#verifyUsersSection{
    caret-color: transparent;
}

        /* Table styling */
        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border-radius: 8px;
        }

        .user-table th, .user-table td {
            padding: 16px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            border-right: 1px solid #ddd; /* Vertical border between columns */
            font-size: 1em;
        }

        .user-table th {
            background-color: #2c3e50;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .user-table table tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
            transition: background-color 0.3s ease;
        }

        .user-table td {
            background-color: #fff;
        }

        /* Buttons */
        button {
            padding: 8px 16px;
            cursor: pointer;
            border-radius: 4px;
            border: none;
            font-size: 0.9em;
            transition: transform 0.2s, opacity 0.2s;
        }

        .accept-btn {
            background-color: #28a745;
            color: white;
        }

        .reject-btn {
            background-color: #dc3545;
            color: white;
        }

        button:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

        button:active {
            transform: scale(1);
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .user-table th, .user-table td {
                padding: 12px;
                font-size: 0.9em;
            }

            h1 {
                font-size: 1.8em;
            }

            button {
                padding: 6px 12px;
                font-size: 0.8em;
            }
        }

        @media (max-width: 480px) {
            .user-table, .user-table thead, .user-table tbody, .user-table th, .user-table td, .user-table tr {
                display: block;
            }

            .user-table tr {
                margin-bottom: 16px;
            }

            .user-table th, .user-table td {
                text-align: right;
                padding: 8px 16px;
            }

            .user-table th::before {
                content: attr(data-label);
                float: left;
                font-weight: bold;
                text-transform: uppercase;
                color: #007bff;
            }

            .user-table th, .user-table td::before {
                display: inline-block;
                width: calc(50% - 16px);
            }

            .user-table td {
                text-align: left;
            }

            button {
                padding: 8px;
                font-size: 0.8em;
            }
        }
    </style>

    <div class="container">
        <h1>User Management</h1>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Student/Level</th>
                    <th>Class/Subject</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="user-list">
                <!-- User list will be populated here -->
            </tbody>
        </table>
    </div>

    <script src="/verifyUser.js"></script>
</section>