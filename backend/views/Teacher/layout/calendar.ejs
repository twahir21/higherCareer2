<!-- Calendar -->
<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/calendar.css">
    <div class="cardEvent">
        <div class="calendar">
            <div class="header">
                <button id="prevBtn">
                    <i class="fa-solid fa-left-long"></i>
                </button>
    
                <div class="monthYear" id="monthYear"></div>
    
                <button id="nextBtn">
                    <i class="fa-solid fa-right-long"></i>
                </button>
            </div>
    
            <div class="days">
                <div class="day">Mon</div>
                <div class="day">Tue</div>
                <div class="day">Wed</div>
                <div class="day">Thur</div>
                <div class="day">Fri</div>
                <div class="day">Sat</div>
                <div class="day">Sun</div>
            </div>
    
            <div class="dates" id="dates"></div>
        </div>
        <div class="events">
            <h2>Events</h2>
            <div class="info-event">
                <h3 class="current-day"></h3>
                <p class="current-date"></p>
                <button class="add-event" id="openPopup">+ Add Event</button>
            </div>
            <div class="overlay" id="overlay"></div>
    
            <div class="popup" id="popup">
                <div class="popup-header">
                    <h2>Add Event</h2>
                    <button id="closePopup" class="close-btn">&times;</button>
                </div>
                <div class="popup-content">
                    <form id="eventForm">
                        <div class="form-group">
                            <label for="eventTitle">Event Title</label>
                            <input type="text" id="eventTitle" placeholder="Enter event title" required class="input">
                        </div>
                        <div class="form-group">
                            <label for="eventDescription">Event Description</label>
                            <textarea id="eventDescription" placeholder="Enter event description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="startDate">Start Date</label>
                            <input type="date" id="startDate" required disabled class="input">
                        </div>
                        <div class="form-group">
                            <label for="endDate">End Date</label>
                            <input type="date" id="endDate" required class="input">
                        </div>
                        <div class="form-actions">
                            <button type="button" id="cancelButton" class="cancel-btn">Cancel</button>
                            <button type="submit" id="saveButton" class="save-btn">Save</button>
                        </div>
                    </form>
                </div>
            </div>
    
            <div class="events-container">
                <!--Events will be added here -->
            </div>
            <script src="/calendar.js"></script>
        </div>    
</div>